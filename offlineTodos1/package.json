{
  "name": "offlineTodos1",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "npm run build && jest",
    "tsc": "tsc",
    "clean": "rimraf artifacts",
    "build": "npm run clean && npm run tsc -- ",
    "lint": "tslint src/**/*.ts",
    "watch": "npm run build -- -w",
    "start:android": "npm run build && react-native run-android "
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "moment": "https://registry.npmjs.org/moment/-/moment-2.18.1.tgz",
    "react": "16.0.0-alpha.12",
    "react-native": "0.48.0",
    "react-native-calendar-datepicker": "^1.2.2",
    "react-native-checkbox": "https://registry.npmjs.org/react-native-checkbox/-/react-native-checkbox-1.2.0.tgz",
    "react-native-device-info": "^0.11.0",
    "react-native-uuid": "^1.4.9",
    "react-navigation": "^1.0.0-beta.11",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-persist": "^4.9.1",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/react": "^16.0.5",
    "@types/react-native": "^0.47.9",
    "@types/react-navigation": "^1.0.19",
    "@types/react-redux": "^5.0.6",
    "babel-jest": "20.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react-native": "3.0.2",
    "jest": "20.0.4",
    "react-test-renderer": "^16.0.0-alpha.12",
    "reactotron-react-native": "^1.12.3",
    "redux-mock-store": "^1.2.3",
    "remote-redux-devtools": "^0.5.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "webpack": "^3.5.5"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "artifacts/.+\\.(test|spec).(ts|tsx|js)$",
    "coverageDirectory": "coverage",
    "collectCoverage": false,
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ],
    "collectCoverageFrom": [
      "artifacts/**/*.js",
      "!artifacts/**/*.spec.js",
      "!artifacts/**/*.index.js"
    ],
    "testEnvironment": "jsdom"
  }
}
